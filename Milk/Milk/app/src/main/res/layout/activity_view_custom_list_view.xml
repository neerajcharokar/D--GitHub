<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_custom"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/project_color">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/farmer_iv"
            android:src="@drawable/milk"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idno"
                android:textAlignment="center"
                android:id="@+id/farmer_idno"
                android:textColor="#FFF"
                android:textSize="23sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/farmer_name"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:padding="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact No"
                android:id="@+id/farmer_cno"
                android:textColor="#FFF"
                android:textSize="23sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/project_color"
        android:orientation="horizontal">
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Update"
            android:id="@+id/farmer_edit"
            android:textStyle="bold"
            android:background="@color/project_color"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/farmer_delete"
            android:text="Delete"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@color/project_color"
            android:textColor="@color/text_color"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="40dp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>