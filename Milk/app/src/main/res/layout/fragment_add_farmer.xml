<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_color"
    tools:context="neeraj.com.milk.Milk.AddFarmer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_farmer_layout"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/farmer_imageview"
            android:src="@drawable/photo_camera"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Image"
            android:id="@+id/tv"
            android:textSize="18sp"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:layout_margin="10dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/farmer_idno"
            android:hint="Idno"
            android:inputType="number"
            style="@style/edit_text_style"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/farmer_name"
            android:hint="Name"
            android:inputType="textPersonName|textCapWords"
            style="@style/edit_text_style"/>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farmer_cno"
            android:maxLength="10"
        android:hint="Contact No"
            android:inputType="phone"
        style="@style/edit_text_style"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_farmer_save"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Save"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="10dp"
            android:layout_marginTop="40dp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</FrameLayout>
