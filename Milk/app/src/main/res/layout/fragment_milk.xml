<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neeraj.com.milk.Milk.MilkFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/project_color"
       android:gravity="center">
       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:id="@+id/milk_farmer_image"
           android:layout_marginBottom="15dp"
           android:src="@drawable/milk_2"/>
       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TableRow>
               <TextView
                   style="@style/text_view_style"
                   android:text="Bill No:"/>
               <TextView
                   style="@style/text_view_style"
                   android:id="@+id/milk_billno"
                   android:background="#dbff9e1f"
                   android:text="1212"/>
               <TextView
                   style="@style/text_view_style"
                   android:text="Date"/>
               <TextView
                   style="@style/text_view_style"
                   android:background="#dbff9e1f"
                   android:id="@+id/milk_date"
                   android:text="18/12/2017"
                   />
           </TableRow>
           <TableRow>
               <TextView
                   style="@style/text_view_style"
                   android:text="Id No:"/>
               <TextView
                   style="@style/text_view_style"
                   android:background="#dbff9e1f"
                   android:id="@+id/milk_idno"
                   android:text="101"/>
               <TextView
                   style="@style/text_view_style"
                   android:text="Day"/>
               <TextView
                   style="@style/text_view_style"
                   android:background="#dbff9e1f"
                   android:id="@+id/milk_day"
                   android:text="AM/PM"/>
               <TextView
                   style="@style/text_view_style"
                   android:text="Name"/>
               <TextView
                   style="@style/text_view_style"
                   android:background="#dbff9e1f"
                   android:id="@+id/milk_name"
                   android:text="Mohit"
                   />
           </TableRow>
       </TableLayout>
       <EditText
           style="@style/edit_text_style"
           android:hint="Fat Content"
           android:id="@+id/milk_fat"
           android:inputType="numberDecimal"/>

       <EditText
           style="@style/edit_text_style"
           android:hint="No of Ltr's"
           android:id="@+id/milk_nol"
           android:inputType="numberDecimal"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Total Amount"
           android:textStyle="bold"
           android:textSize="25sp"
           android:id="@+id/milk_total_amount"
           android:textColor="@color/text_color"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/milk_farmer_save"
           android:textStyle="bold"
           android:textAllCaps="false"
           android:text="Save"
           android:textColor="@color/text_color"
           android:fontFamily="monospace"
           android:textSize="20sp"
           android:drawableLeft="@drawable/check"
           android:drawablePadding="10dp"
           android:layout_marginTop="40dp"
           style="?android:attr/borderlessButtonStyle"/>
   </LinearLayout>

</FrameLayout>
