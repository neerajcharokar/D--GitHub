<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neeraj.com.milk.Milk.DialogActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dialog_ll"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/project_color">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/milk_icon"
            android:src="@drawable/milk_2"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edittext1"
            android:layout_margin="10dp"
            android:hint="Name"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:inputType="textPersonName|textCapWords"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/text_color"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edittext2"
            android:layout_margin="10dp"
            android:hint="Contact No"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:maxLength="10"
            android:inputType="phone"
            android:textSize="20sp"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="10dp"
            android:textColorHint="@color/text_color"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edittext3"
            android:layout_margin="10dp"
            android:hint="Email"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/mail2"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/text_color"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/farmer_center_name"
            android:hint="Center Name"
            android:drawableLeft="@drawable/center"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:inputType="textPersonName|textCapWords"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/text_color"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/dialog_button"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="10dp"
            android:layout_marginTop="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="dialogRegister"
            />
    </LinearLayout>
</FrameLayout>
